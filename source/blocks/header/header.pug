include ../svg/svg
include ../link/link
include ../button/button
include ../contacts-phone/contacts-phone
include ../menu-nav/menu-nav

-
  const mainNavList = [
      {
        item: 'Оффер',
        anchor: 'offer',
      },
      {
        item: 'Услуги',
        anchor: 'services',
      },
      {
        item: 'Гарантии',
        anchor: 'warranty',
      },
      {
        item: 'Доставка',
        anchor: 'delivery',
      },
      {
        item: 'Отзывы',
        anchor: 'reviews',
      },
      {
        item: 'Вопросы',
        anchor: 'faq',
      },
      {
        item: 'Контакты',
        anchor: 'contacts',
      },
    ]

mixin header
  header.header
    div.header__main-nav-container.container
      div.header__logo
        a.header__logo-link(href="#")
          img.header__logo-img(src="img/icons/logo.png" width="54" height="62" alt="Логотип")
      div.header__main-nav-wrap
        +menu-nav(mainNavList, 'Главное меню').header__main-nav
      div.header__contacts
        +contacts-phone('phone-icon.png', 13, 14).header__contacts-phone
        +button("Заказать звонок", "orange")(aria-label='Заказать звонок' type="button").header__call-request.js-call-request-open


    button(type="button").header__toggle
      span.visually-hidden Открыть/закрыть
      +svg('burger')(width="32" height="23").header__toggle-svg-open
      +svg('cross')(width="23" height="23").header__toggle-svg-close
    div.header__dropdown
    div.header__overlay
